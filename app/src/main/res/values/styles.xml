<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="SplashTheme" parent="@android:style/Theme.Black.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Title" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="SubTitle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/defaultTextColor</item>
    </style>

    <style name="Title.ViewHolder" parent="Title">
        <item name="android:textSize">15sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SubTitle.ViewHolder" parent="SubTitle">
        <item name="android:textSize">13sp</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Title.Articles" parent="Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Title.MatchHeader" parent="Title">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Score" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Score.ViewHolder" parent="Score">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Score.Table" parent="Score">
        <item name="android:background">@drawable/shape_rectangle_stroke</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">60dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TeamsName" parent="@android:style/TextAppearance"/>

    <style name="TeamsName.Match" parent="TeamsName">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center</item>

    </style>
</resources>
