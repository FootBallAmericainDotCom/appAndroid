<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="@android:style/Theme.Black.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Title" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:fontFamily">@font/nexa_light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Title.ViewHolder" parent="Title">
        <item name="android:textSize">15sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Title.Articles" parent="Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Title.MatchHeader" parent="Title">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Title.QuartTime" parent="Title">
        <item name="android:padding">3dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SubTitle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/defaultTextColor</item>
    </style>

    <style name="SubTitle.ViewHolder" parent="SubTitle">
        <item name="android:textSize">13sp</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Score" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/nexa_bold</item>
    </style>

    <style name="Score.ViewHolder" parent="Score">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Score.Match" parent="Score">
        <item name="android:gravity">center</item>
        <item name="android:minWidth">60dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">45sp</item>
    </style>

    <style name="Score.Match.GravityStart" parent="Score.Match">
        <item name="android:gravity">start</item>
        <item name="android:layout_marginStart">@dimen/margin_from_center</item>
    </style>

    <style name="Score.Match.GravityEnd" parent="Score.Match">
        <item name="android:gravity">end</item>
        <item name="android:layout_marginEnd">@dimen/margin_from_center</item>
    </style>

    <style name="TeamsName" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/nexa_bold</item>
    </style>

    <style name="TeamsName.Match" parent="TeamsName">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TeamsName.Match.GravityStart" parent="TeamsName.Match">
        <item name="android:gravity">start</item>
        <item name="android:layout_marginStart">@dimen/margin_from_center</item>
    </style>

    <style name="TeamsName.Match.GravityEnd" parent="TeamsName.Match">
        <item name="android:gravity">end</item>
        <item name="android:layout_marginEnd">@dimen/margin_from_center</item>
    </style>

    <style name="TeamsName.AllTeam.ViewHolder" parent="TeamsName">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:gravity">center_vertical|start</item>
    </style>

    <style name="TeamsLogo">
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="TeamsLogo.Match" parent="TeamsLogo">
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">70dp</item>
    </style>

    <style name="Table" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Table.Title" parent="Table">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Table.RowText" parent="Table" />

    <style name="Roaster" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Statistic" parent="@android:style/TextAppearance" />

    <style name="Statistic.Title" parent="Statistic">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/nexa_bold</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="Statistic.Header" parent="Statistic">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@color/gray73</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="Statistic.Result" parent="Statistic">
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
    </style>
</resources>
